<script src="https://cdn.ckeditor.com/4.18.0/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('context')
    let editform = document.forms.editForm
    console.log(editform)

    function editElement(id) {
        console.log(id)
        let imageForm=document.getElementById('imageForm')
        fetch(`/news/get/${id}`)
            .then(res => res.json())
            .then(data => {
                console.log(data)
                editform.title.value=data.title
                editform._id.value=data._id
                editform.category.value=data.category._id
                editform.author.value=data.author._id
                editform.description.value=data.description
                editform.context.value=data.context
                editform.hashList.value=data.hashList
                if(data.Image){
                    imageForm.setAttribute('src',`/${data.Image}`)
                }
            })
    }
</script>