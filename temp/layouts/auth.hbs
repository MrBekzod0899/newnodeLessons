    <style>
        .registeralert{
            width: 400px;
            position: fixed;
            top: 10px;
            right: 10px;
            transition: 0.4s;
        }
        .closeIcon{
            font-size: 30px;
            font-weight: bold;
            top: -10px;
            right: 10px;
            position: absolute;
            cursor: pointer;
        }
        .registeralert.hide{
            display: none;
        }
    
    </style>
</head>

<body class="auth-page sign-in">
    {{#if error}}
        <div class="alert alert-danger registeralert" role="alert" >
            <span>{{error}}</span>
            <i class="fa-solid fa-xmark text-danger closeIcon" onclick="closeAlert()">&times;</i>
        </div>
    {{/if}} 
    {{#if success}}
        <div class="alert alert-success registeralert" role="alert" >
            <span>{{success}}</span>
            <i class="fa-solid fa-xmark text-primary closeIcon" onclick="closeAlert()">&times;</i>
        </div>
    {{/if}}
    
    <div class="connect-container align-content-stretch d-flex flex-wrap">
        <div class="container-fluid">
            
            <div class="row">
                <div class="col-lg-5">  
                    <div class="auth-form">
                        <div class="row">
                            <div class="col">
                                <div class="logo-box"><a href="#" class="logo-text">{{formTitle}}</a></div>
                                {{{body}}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block d-xl-block">
                    <div class="auth-image"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Javascripts -->

    <script src="/back/plugins/jquery/jquery-3.4.1.min.js"></script>
    <script src="/back/plugins/bootstrap/popper.min.js"></script>
    <script src="/back/plugins/bootstrap/js/bootstrap.min.js"></script>
